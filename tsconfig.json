{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [ "es2018" ],
    "module": "commonjs",
    "noEmitOnError": true,
    "skipLibCheck": false,
    "target": "es2018",
    "outDir": "build",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}